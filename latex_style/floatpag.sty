         }\global\count\@currbox\@tempcnta}\@fltovf\fi
        \expandafter\expandafter\expandafter\gdef\expandafter\csname\number\@currbox 
                @float\endcsname{\at@rotfloat@page}\relax
     \global\setbox\@currbox\vbox\bgroup
